{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tsbuildinfo",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": [
    "vite.config.ts",
    "main.ts",
    "./components/banner/banner.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "references": [
    { "path": "../packages/core" },
    { "path": "../packages/infuse" },
    { "path": "../packages/pulse"},
    { "path": "../packages/cast"}
  ]
}